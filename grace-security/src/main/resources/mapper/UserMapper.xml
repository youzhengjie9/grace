<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.grace.security.mapper.UserMapper">

    <!--   通过sql标签抽取重复的字段进行复用 -->
    <sql id="userField1">
        sys_user.id,
        sys_user.username,
        sys_user.status,
        sys_user.create_time,
        sys_user.update_time
    </sql>

    <!--   这种增强版的分页sql的子查询一定要加上ORDER BY id，不然数据会不一致 -->
    <select id="getUserList" resultType="com.grace.security.entity.User">
        SELECT
        <include refid="userField1"/>
        FROM sys_user
        WHERE id >= (SELECT id FROM sys_user ORDER BY id limit #{page},1)
        limit #{size}
    </select>
    <select id="getUserCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM sys_user
    </select>

    <!--   这种增强版的分页sql的子查询一定要加上ORDER BY id，不然数据会不一致 -->
    <select id="getUserListByUsername" resultType="com.grace.security.entity.User">
        SELECT
        <include refid="userField1"/>
        FROM sys_user
        WHERE id >= (SELECT id FROM sys_user ORDER BY id limit #{page},1)
        AND username LIKE CONCAT('%',#{username},'%')
        limit #{size}
    </select>
    <select id="getUserCountByUsername" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM sys_user
        WHERE username LIKE CONCAT('%',#{username},'%')
    </select>

    <insert id="addRoleToUser">
        INSERT INTO sys_user_role(id,user_id,role_id)
        values
        <foreach collection="userRoleList" item="item" separator=",">
            (
            #{item.id},
            #{item.userId},
            #{item.roleId}
            )
        </foreach>
    </insert>
    <delete id="deleteUserAllRoles">
        DELETE
        FROM
            sys_user_role
        WHERE user_id=#{userid}
    </delete>

    <update id="updateUser" parameterType="com.grace.security.entity.User">
        UPDATE sys_user SET user_name=#{userName},nick_name=#{nickName},
        <if test="password != null and password != ''">
            password=#{password},
        </if>
        status=#{status},email=#{email},phone=#{phone},sex=#{sex},
        <if test="avatar != null and avatar != ''">
            avatar=#{avatar},
        </if>
        update_time=#{updateTime}
        WHERE id =#{id}
    </update>

    <select id="getUserByUserName" resultType="com.grace.security.entity.User">
        SELECT * FROM sys_user WHERE username = #{username} AND status = 0
    </select>

</mapper>